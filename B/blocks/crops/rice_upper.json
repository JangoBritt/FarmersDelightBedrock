{
    "format_version": "1.20.0",
    "minecraft:block": {
        "description": {
            "identifier": "farmersdelight:rice_block_upper",
            "properties": {
                "farmersdelight:age": [
                    0,
                    1,
                    2,
                    3
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('farmersdelight:age') == 0",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/empty.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_upper_crop_stage0",
                            "ambient_occlusion": false,
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -5,
                            0,
                            -5
                        ],
                        "size": [
                            10,
                            8,
                            10
                        ]
                    }
                }
            },
            {
                "condition": "query.block_property('farmersdelight:age') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/empty.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_upper_crop_stage1",
                            "ambient_occlusion": false,
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -5,
                            0,
                            -5
                        ],
                        "size": [
                            10,
                            8,
                            10
                        ]
                    }
                }
            },
            {
                "condition": "query.block_property('farmersdelight:age') == 2",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/empty.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_upper_crop_stage2",
                            "ambient_occlusion": false,
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -7,
                            0,
                            -7
                        ],
                        "size": [
                            14,
                            16,
                            14
                        ]
                    }
                }
            },
            {
                "condition": "query.block_property('farmersdelight:age') == 3",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/crops/farmersdelight_rice_riped.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_upper_crop_stage3",
                            "ambient_occlusion": false,
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -7,
                            0,
                            -7
                        ],
                        "size": [
                            14,
                            16,
                            14
                        ]
                    }
                }
            }
        ],
        "components": {
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.0
            },
			"minecraft:flammable": {
				"catch_chance_modifier": 30,
				"destroy_chance_modifier": 30
			},
			"minecraft:light_dampening": 0,
            "minecraft:geometry": "geometry.crop_cross",
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0.0
            },
            "minecraft:breathability": "air",
            "minecraft:collision_box": false,
            "minecraft:on_interact": {
                "event": "farmersdelight:on_interact"
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "block_filter": [
                            "farmersdelight:rice_block"
                        ],
                        "allowed_faces": [
                            "up"
                        ]
                    }
                ]
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "grow_stage",
                    "target": "self"
                }
            },
            "tag:crop_block": {}
        },
        "events": {
            "grow_stage": {
                "randomize": [
                    {
                        "weight": 5
                    },
                    {
                        "weight": 12,
                        "set_block_property": {
                            "farmersdelight:age": "(query.block_property('farmersdelight:age')<3) ? query.block_property('farmersdelight:age') + 1 : 3"
                        }
                    }
                ]
            },
            "farmersdelight:on_interact": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:bone_meal')&&(query.block_property('farmersdelight:age')<3)",
                        "trigger": {
                            "event": "grow_stage"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:bone_meal')&&(query.block_property('farmersdelight:age')<3)",
                        "decrement_stack": {}
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:bone_meal')&&(query.block_property('farmersdelight:age')<3)",
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~~~"
                            ]
                        }
                    },
                    {
                        "condition": "query.block_property('farmersdelight:age')==3",
                        "set_block_property": {
                            "farmersdelight:age": 0
                        }
                    },
                    {
                        "condition": "query.block_property('farmersdelight:age')==3",
                        "spawn_loot":{
                            "table": "loot_tables/farmersdelight/crops/farmersdelight_rice_riped.json"
                        }
                    }
                ]
            }
        }
    }
}