                }
            },
            {
                "condition": "query.block_state('farmersdelight:food_block_stage') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/roast_chicken_over.json",
                    "minecraft:geometry": "geometry.roast_chicken_block_stage1",
                    "tag:farmersdelight:use_bowl":{}
                }
            },
            {
                "condition": "query.block_state('farmersdelight:food_block_stage') == 2",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/roast_chicken_over.json",
                    "minecraft:geometry": "geometry.roast_chicken_block_stage2",
                    "tag:farmersdelight:use_bowl":{}
                }
            },
            {
                "condition": "query.block_state('farmersdelight:food_block_stage') == 3",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/roast_chicken_over.json",
                    "minecraft:geometry": "geometry.roast_chicken_block_stage3",
                    "tag:farmersdelight:use_bowl":{}
                }
            },
            {
                "condition": "query.block_state('farmersdelight:food_block_stage') == 4",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/roast_chicken_over.json",
                    "minecraft:geometry": "geometry.roast_chicken_block_leftover"
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            }
        ],
        "components": {
            "minecraft:on_interact": {
                "event": "on_interact"
            },
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1.0
            },
            "minecraft:light_dampening": 0,
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0.25
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "roast_chicken_eaten",
                    "render_method": "alpha_test"
                },
                "roast_chicken_eaten": {
                    "texture": "roast_chicken_eaten",
                    "render_method": "alpha_test"
                },
                "roast_chicken_gibs": {
                    "texture": "roast_chicken_gibs",
                    "render_method": "alpha_test"
                },
                "tray_bottom": {
                    "texture": "tray_bottom",
                    "render_method": "alpha_test"
                },
                "tray_top_veggies": {
                    "texture": "tray_top_veggies",
                    "render_method": "alpha_test"
                },
                "tray_top_leftover": {
                    "texture": "tray_top_leftover",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:collision_box": {
                "origin": [
                    -7.0,
                    0.0,
                    -7.0
                ],
                "size": [
                    14.0,
                    9.0,
                    14.0
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -7.0,
                    0.0,
                    -7.0
                ],
                "size": [
                    14.0,
                    9.0,
                    14.0
                ]
            }
        },
        "events": {
            "on_interact": {
                "sequence": [
                    {
                        "condition": "query.block_state('farmersdelight:food_block_stage') != 4",
                        "trigger": {
                            "event": "roast_chicken",
                            "target": "self"
                        }
                    },
                    {
                        "condition": "query.block_state('farmersdelight:food_block_stage') == 4",
                        "die": {
                            "target": "block"
                        }
                    }
                ]
            },
            "roast_chicken": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:bowl') == 1",
                        "set_block_state": {
                            "farmersdelight:food_block_stage": "query.block_state('farmersdelight:food_block_stage') + 1"
                        },
                        "decrement_stack": {},
                        "spawn_loot": {
                            "table": "loot_tables/farmersdelight/food_block/roast_chicken.json"
                        }
                    }
                ]
            }
        }
    }
}