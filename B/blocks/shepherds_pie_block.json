{
    "format_version": "1.20.0",
    "minecraft:block": {
        "description": {
            "identifier": "farmersdelight:shepherds_pie_block",
            "menu_category": {
                "category": "none"
            },
            "properties": {
                "farmersdelight:food_block_stage": [
                    0,
                    1,
                    2,
                    3,
                    4
                ]
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction"
                    ],
                    "y_rotation_offset": 0.0
                }
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('farmersdelight:food_block_stage') == 0",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/shepherds_pie.json",
                    "minecraft:geometry": "geometry.shepherds_pie_block_stage0"
                }
            },
            {
                "condition": "query.block_property('farmersdelight:food_block_stage') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/shepherds_pie_over.json",
                    "minecraft:geometry": "geometry.shepherds_pie_block_stage1"
                }
            },
            {
                "condition": "query.block_property('farmersdelight:food_block_stage') == 2",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/shepherds_pie_over.json",
                    "minecraft:geometry": "geometry.shepherds_pie_block_stage2"
                }
            },
            {
                "condition": "query.block_property('farmersdelight:food_block_stage') == 3",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/shepherds_pie_over.json",
                    "minecraft:geometry": "geometry.shepherds_pie_block_stage3"
                }
            },
            {
                "condition": "query.block_property('farmersdelight:food_block_stage') == 4",
                "components": {
                    "minecraft:loot": "loot_tables/farmersdelight/food_block/shepherds_pie_over.json",
                    "minecraft:geometry": "geometry.shepherds_pie_block_leftover"
                }
            },
            {
                "condition": "query.block_property('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_property('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_property('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_property('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            }
        ],
        "components": {
            "minecraft:on_interact": {
                "event": "on_interact"
            },
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1.0
            },
            "minecraft:light_dampening": 0,
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0.25
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "shepherds_pie_side"
                },
                "shepherds_pie_top": {
                    "texture": "shepherds_pie_top"
                },
                "shepherds_pie_side": {
                    "texture": "shepherds_pie_side"
                },
                "tray_bottom": {
                    "texture": "tray_bottom"
                },
                "shepherds_pie_inner": {
                    "texture": "shepherds_pie_inner"
                },
                "tray_pie_leftover": {
                    "texture": "tray_pie_leftover"
                }
            },
            "minecraft:collision_box": {
                "origin": [
                    -7.0,
                    0.0,
                    -7.0
                ],
                "size": [
                    14.0,
                    8.0,
                    14.0
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -7.0,
                    0.0,
                    -7.0
                ],
                "size": [
                    14.0,
                    8.0,
                    14.0
                ]
            }
        },
        "events": {
            "on_interact": {
                "sequence": [
                    {
                        "condition": "query.block_property('farmersdelight:food_block_stage') != 4",
                        "trigger": {
                            "event": "shepherds_pie",
                            "target": "self"
                        }
                    },
                    {
                        "condition": "query.block_property('farmersdelight:food_block_stage') == 4",
                        "die": {
                            "target": "block"
                        }
                    }
                ]
            },
            "shepherds_pie": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:bowl') == 1",
                        "set_block_property": {
                            "farmersdelight:food_block_stage": "query.block_property('farmersdelight:food_block_stage') + 1"
                        },
                        "decrement_stack": {},
                        "spawn_loot": {
                            "table": "loot_tables/farmersdelight/food_block/shepherds_pie.json"
                        }
                    }
                ]
            }
        }
    }
}